<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amarillo</item>
        <item name="colorAccent">@color/naranja</item>
        <item name="colorPrimaryDark">@color/amarilloOscuro</item>
        <item name="android:windowBackground">@color/gris</item>
    </style>

    <style name="AppThemeNOActionBar" parent="AppTheme" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppThemePrincipal" parent="AppTheme" >
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryDark">@color/azulOscuro</item>
    </style>

    <!--use item name="drawerArrowStyle" if you are using dark primaryColor in your app, else remove it-->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
