<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaComunidades.BusquedaComunidadesActivity">

    <SearchView
        android:id="@+id/sv_busqueda_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Buscar">

        <requestFocus />
    </SearchView>

    <ListView
        android:id="@+id/lv_busqueda_comunidades_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sv_busqueda_id"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sv_busqueda_id"
        tools:layout_editor_absoluteX="207dp" />

</android.support.constraint.ConstraintLayout>